@model ClickExpress.Models.Usuario

@{
    ViewData["Title"] = "RelatoriosUser";
}



<div style="padding: 0px 25px 0px 25px">
    <div class="container m-0 p-0 mw-100" style="font-size: 1.0vw; ">
        <div>
            <br />
            <h4 class="table text-white">Meus Pedidos</h4>
            <br />
            <a asp-action="RelatoriosUserPendente" class="text-white" style="background-color: #D90429; border-radius: 30px; padding: 5px 8px 5px 8px;">Pendentes</a>
            <a asp-action="RelatoriosUserRespondido" class="text-dark" style="background-color: #A5FFD6; border-radius: 30px; padding: 5px 8px 5px 8px;">Respondidos</a>
            <a asp-action="RelatoriosUserAceito" class="text-dark" style="background-color: #D3AD82; border-radius: 30px; padding: 5px 8px 5px 8px;">Aceitos</a>
            <a asp-action="RelatoriosUserFinalizado" class="text-white" style="background-color: #5E931D; border-radius: 30px; padding: 5px 8px 5px 8px;">Finalizados</a>
            <br /><br /><br />
            <div class="table-responsive">
                <table class="table text-white">
                    <thead>
                        <tr>
                            <th style="vertical-align: middle; text-align: center">
                                Status
                            </th>
                            <th style="vertical-align: middle; text-align: center">
                                Nº da Solicitação
                            </th>
                            <th style="vertical-align: middle; text-align: center">
                                Tipo de Serviço
                            </th>
                            <th style="vertical-align: middle; text-align: center">
                                Data Agendada
                            </th>
                            <th style="vertical-align: middle; text-align: center">
                                Cidade de Origem
                            </th>
                            <th style="vertical-align: middle; text-align: center">
                                Estado de Origem
                            </th>
                            <th style="vertical-align: middle; text-align: center">
                                Cidade de Destino
                            </th>
                            <th style="vertical-align: middle; text-align: center">
                                Estado de Destino
                            </th>
                            <th style="vertical-align: middle; text-align: center">
                                Serviço de Descarga
                            </th>
                            <th style="vertical-align: middle; text-align: center">
                                Serviço de Montagem
                            </th>
                            <th style="vertical-align: middle; text-align: center">
                                Valor do Serviço
                            </th>
                            <th style="vertical-align: middle; text-align: center">
                                + Info
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Pedidos)
                        {

            @if (Convert.ToInt32(item.Status) == 0)
            {
<tr>
    <td style="vertical-align: middle; text-align: center">
        <div class="text-white" style="background-color: #D90429; border-radius: 30px; padding: 1px 5px 1px 5px; vertical-align: middle; text-align: center">Pendente</div>
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Id_contrato)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Tipo)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Dt_agendamento)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Cidade_origem)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.UF_origem)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Cidade_destino)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.UF_destino)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Serv_descarrega)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Serv_montagem)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Preco)
    </td>
    <td style="vertical-align: middle; text-align: center">
        <a class="btn" style="color: #2B2D42; background-color: white; font-size: 1vw; font-weight: 500;" asp-controller="Pedidos" asp-action="DetailsAprovacao" asp-route-id="@item.Id_contrato">Detalhes</a>
    </td>
</tr>
 }
else if (Convert.ToInt32(item.Status) == 1)
{
<tr>
    <td style="vertical-align: middle; text-align: center">
        <div class="text-dark" style="background-color: #A5FFD6; border-radius: 30px; padding: 1px 5px 1px 5px; vertical-align: middle; text-align: center">Respondido</div>
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Id_contrato)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Tipo)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Dt_agendamento)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Cidade_origem)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.UF_origem)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Cidade_destino)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.UF_destino)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Serv_descarrega)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Serv_montagem)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Preco)
    </td>
    <td style="vertical-align: middle; text-align: center">
        <a class="btn" style="color: #2B2D42; background-color: white; font-size: 1vw; font-weight: 500;" asp-controller="Pedidos" asp-action="DetailsAprovacao" asp-route-id="@item.Id_contrato">Detalhes</a>
    </td>
</tr>
 }
else if (Convert.ToInt32(item.Status) == 2)
{
<tr>
    <td style="vertical-align: middle; text-align: center">
        <div class="text-dark" style="background-color: #D3AD82; border-radius: 30px; padding: 1px 5px 1px 5px; vertical-align: middle; text-align: center">Aceito</div>
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Id_contrato)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Tipo)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Dt_agendamento)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Cidade_origem)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.UF_origem)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Cidade_destino)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.UF_destino)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Serv_descarrega)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Serv_montagem)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Preco)
    </td>
    <td style="vertical-align: middle; text-align: center">
        <a class="btn" style="color: #2B2D42; background-color: white; font-size: 1vw; font-weight: 500;" asp-controller="Pedidos" asp-action="DetailsAprovacao" asp-route-id="@item.Id_contrato">Detalhes</a>
    </td>
</tr>
 }
else if (Convert.ToInt32(item.Status) == 3)
{
<tr>
    <td style="vertical-align: middle; text-align: center">
        <div class="text-white" style="background-color: #5E931D; border-radius: 30px; padding: 1px 5px 1px 5px; vertical-align: middle; text-align: center">Finalizado</div>
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Id_contrato)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Tipo)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Dt_agendamento)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Cidade_origem)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.UF_origem)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Cidade_destino)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.UF_destino)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Serv_descarrega)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Serv_montagem)
    </td>
    <td style="vertical-align: middle; text-align: center">
        @Html.DisplayFor(modelItem => item.Preco)
    </td>
</tr>
}}
                    </tbody>
                </table>
            </div>
            <br /><br />
        </div>
    </div>
</div>
