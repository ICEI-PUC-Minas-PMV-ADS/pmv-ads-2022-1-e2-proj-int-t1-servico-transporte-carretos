@model IEnumerable<ClickExpress.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<div style="width: 60%; margin-left: auto; margin-right: auto;">
    <center>
        <br /><br />
        <span style="color: white; font-weight: bold; font-size: 30px">Selecione o seu perfil de usuário </span>
        <br /><br /><br />
        <a asp-action="Create" asp-controller="Clientes" class="btn" style="background-color: #EF233C; color: white; border: none; font-weight: bold; padding: 30px 0px 30px 0px; width: 120px">Cliente</a>
        <a asp-action="Create" asp-controller="Prestadores" class="btn" style="background-color: #5E931D; color: white; border: none; font-weight: bold; padding: 30px 0px 30px 0px; width: 120px">Prestador </a>
        <br /><br /><br />
        <a class="btn btn-warning" asp-controller="Home" asp-action="Index" style="background-color: white; color: #EF233C; border: none; font-weight: bold">Voltar</a>
        <br /><br /><br /><br />
    </center>
</div>
