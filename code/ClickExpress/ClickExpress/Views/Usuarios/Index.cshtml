@model IEnumerable<ClickExpress.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<div class="text-white">
    <h1>Cadastro de usuários</h1>
</div>

<table class="table text-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id_usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cep)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logradouro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bairro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Num_endereco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf_Cnpj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Perfil)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Veiculo)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id_usuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cep)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Logradouro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bairro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UF)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Num_endereco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cpf_Cnpj)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Perfil)
                </td>
                <th>
                    @Html.DisplayFor(modelItem => item.Veiculo)
                </th>
                <td>
                    <a asp-action="RelatoriosSpec">RelatórioSpec</a>
                    <a asp-action="Edit" asp-route-id="@item.Id_usuario">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id_usuario">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id_usuario">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
