<!DOCTYPE html>
<html lang="pt-br" style="height: 100vh;">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClickExpress</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>
<body style="height: 100vh;">

    <header style="background-color: #EDF2F4">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light" style="">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img width="200px" src="~/Imagens/Logo.png" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">

                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Cliente"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Pedidos" asp-action="Create">Solicitar Pedido</a>
                                </li>
                                <li class="nav-item">
                                    <!--Item adicionado-->
                                    <a class="nav-link text-white" asp-area="" asp-controller="Usuarios" asp-action="RelatoriosUser">Pedidos</a>
                                </li>
                                <li class="nav-item">
                                    <!--Item adicionado-->
                                    <a class="nav-link text-white" asp-area="" asp-controller="Clientes" asp-action="EditProfile">Minha Área</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <!--Item adicionado-->
                                    <a class="nav-link text-white" asp-area="" asp-controller="Pedidos" asp-action="RelatorioUserStatusPendente">Pedidos</a>
                                </li>
                                <li class="nav-item">
                                    <!--Item adicionado-->
                                    <a class="nav-link text-white" asp-area="" asp-controller="Prestadores" asp-action="EditProfile">Minha Área</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Usuarios" asp-action="Logout">Sair</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link">Olá, @User.Identity.Name</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Quem Somos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Usuarios" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <!--Item adicionado-->
                                <a class="nav-link text-white" asp-area="" asp-controller="Usuarios" asp-action="Index">Cadastrar</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container m-0 p-0 mw-100" style="min-height: 65vh; background-color: #282D42">
        @RenderBody()
    </main>


    <footer class="footer text-white position-relative" style="font-size: 100%; padding-bottom: 1.5vw; background-color: #8D99AE">
        <div class="container" style="padding-top: 2.0vw">
            <div class="row">

                <div class="col-sm" style="padding-bottom: 1.5vw;">
                    <div style="padding-bottom: 1.2vw;"><a asp-area="" asp-controller="Home" asp-action="Privacy" style="color: white;">Saiba mais sobre a Click Express</a></div>
                    <div style="padding-bottom: 0.6vw; font-weight: bold; color: white;">Telefone</div>
                    <div style="padding-bottom: 0.6vw; color: white;">(31) 0000-0000</div>
                </div>

                <div class="col-sm" style="padding-bottom: 1.5vw;">
                    <div style="padding-bottom: 0.6vw; color: white; font-weight: bold"> Localização </div>
                    <div style="padding-bottom: 0.6vw; color: white;"> Rua Um, 2, Horto - Belo Horizonte - MG </div>
                    <div style="padding-bottom: 0.6vw; color: white;"> Cep: 30000-000 </div>
                </div>

                <div class="col-sm" style="padding-bottom: 1.5vw;">
                    <div style="padding-bottom: 1.2vw; color: white; font-weight: bold"> Nos siga nas redes sociais </div>
                    <a href="https://www.facebook.com/Click-Express-109802545105769"><i class="bi bi-facebook" style="color: #3b5998; font-size: 3.0vw"></i></a>
                    <a href="https://www.instagram.com/aclickexpresstransportes/"><i class="bi bi-instagram" style="color: #ff1981; font-size: 3.0vw; padding: 10px"></i></a>
                    <a href="https://twitter.com/ClickExpress6"><i class="bi bi-twitter" style="color: #00acee; font-size: 3.0vw"></i></a>
                </div>

            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Pedido.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
