@model IEnumerable<ClickExpress.Models.Orcamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="text-white">
    <h4>Orçamentos</h4>
    <hr />
    <table class="table text-white">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id_contrato)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Id_prestador)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Preco)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td readonly>
                        @Html.DisplayFor(modelItem => item.Id_contrato)
                    </td>
                    <td readonly>
                        @Html.DisplayFor(modelItem => item.Id_prestador)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Preco)
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id_orcamento">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.Id_orcamento">Detalhes</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id_orcamento">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>